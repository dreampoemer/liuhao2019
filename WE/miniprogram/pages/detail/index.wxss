/* pages/detail/index.wxss */
@import '../../style/common.wxss';
.movie-bg{
  height: 400rpx;
  filter:blur(40rpx);
  opacity: .4;
}
.bg-mask{
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}
.detail-wrap{
  width: 100%;
  height: 400rpx;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
  position: absolute;
  top: 0;
  left:0;
}
.detail-image{
  width: 200rpx;
  height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.movie-detail{
  flex: 1;
  margin-left: 20rpx;
}
.movie-detail view{
  margin: 20rpx 0;
}
.movie-title{
  color: #fff;
  font-size: 40rpx;
  font-weight: bolder;
}
.movie-origin-title{
  font-size: 24rpx;
  color: #fff;
}
.movie-score{
  color: #faaf00;
  font-weight: bolder;
}
.movie-origin-place,.directors{
  font-size:26rpx;
  color: #fff;
}
.movie-summary{
  padding:20rpx 10rpx;
  word-break: break-all;
  font-size: 24rpx;
  background-color: #fff;
}
button:is[size='large']{
  width: 100%!important;
}
.upload-images{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}